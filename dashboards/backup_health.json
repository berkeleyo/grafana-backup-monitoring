{
  "title": "Backup Health",
  "panels": [
    {
      "type": "stat",
      "title": "Jobs Failed (24h)",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(backup_jobs_failed{window='24h'})"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Durations (p95)",
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(backup_duration_seconds_bucket[1h])) by (le))"
        }
      ]
    }
  ]
}